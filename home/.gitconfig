[init]
	defaultBranch = main
[pull]
	rebase = false
[user]
	name = Jorge Mederos
	email = jmederosalvarado@gmail.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOjJUdBorQUi19pxojdhcXEWI4fQg4dZ5PM9lZ4XEeKd
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    wt = worktree
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    bare = "!sh $HOME/.dots/scripts/git-bare.sh"
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
